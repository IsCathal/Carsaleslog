<h1>Hello New SalesPerson</h1>
<% if @salesperson.errors.any? %>
  <h2>You got an error</h2>
  <ul>
    <% @salesperson.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @salesperson, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :firstName, "First Name" %><br/>
    <%= f.text_field :firstName %>
  </p>
  <p>
    <%= f.label :lastName, "Last Name" %><br/>
    <%= f.text_field :lastName %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>